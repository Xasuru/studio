name: Build Vanguard APK
on: [push, workflow_dispatch] # Builds every time you save code

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Set up Java
        uses: actions/setup-java@v3
        with:
          distribution: 'temurin'
          java-version: '17'

      - name: Setup Flutter # Change this if you use React Native
        uses: subosito/flutter-action@v2
        with:
          channel: 'stable'

      - name: Get Dependencies
        run: flutter pub get

      - name: Build APK
        run: flutter build apk --release

      - name: Upload APK to GitHub
        uses: actions/upload-artifact@v4
        with:
          name: Vanguard-Release-APK
          path: build/app/outputs/flutter-apk/app-release.apk

